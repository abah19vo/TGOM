<link href = "/CSS/login.css" rel= "stylesheet" type = "text/css">

<title>LOGIN</title>

<div class="center">
    <div class="login_logo">
        <span style="color:#FFF">LOGIN</span>
    </div>
    <form action="/account/sign-in" method="POST" name="login">
        {{#if errors.length}}
            {{#each errors}}
                <h1 class="login_error_msg">{{this}}</h1>
            {{/each}}
        {{/if}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="form-group has-success">
            <label class="form-label" for="input-example-1">Username:</label>
            <input class="form-input" type="text" name="username" value="{{username}}" placeholder="Username" required>
        </div>
        <div class="form-group">
            <label class="form-label" for="input-example-1">Password:</label>
            <input class="form-input" type="password" name="password" value= "{{password}}" placeholder="Password" required>
        </div>      
        <button class="btn" type="submit" value="login">Login</button>
        <a href="/account/sign-up" class="register">Register</a>
    </form>
</div>


