
<link href = "/CSS/staffs.css" rel= "stylesheet" type = "text/css" >



<title>CREATE A COMMENT</title>

<div id="user_section">
	<h1>CREATE A COMMENT</h1>
		{{#if errors.length}}
			{{#each errors}}
				<p class="login_error_msg">{{this}}</p>
			{{/each}}
		{{/if}}
		<form action="" method="POST">
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<div id="update_textarea">
				Comment: <textarea class="update_textarea" type="text" name="content" rows="4" cols="60" >{{comment.content}} </textarea>
			</div>
			<div id="submit_update">
				<input class="submit_update_btn" type="submit" name="create-btn" value="CREATE">
			</div>
		</form>
</div>