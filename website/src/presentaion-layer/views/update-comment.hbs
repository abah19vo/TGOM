
<link href = "/CSS/staffs.css" rel= "stylesheet" type = "text/css" >



<title>UPDATE A COMMENT</title>
	{{#if CommentDeleted}}
		<p class="admin_top">Unfortunately The Comment Has Been Deleted</p>
	{{/if}}
	{{#if dbErrorOccurred}}
		<p class="admin_top">Can't display the page now, try again later.</p>
	{{/if}}
<div id="user_section">
	<h1>UPDATE A COMMENT</h1>
	{{> errors errors}}
		<form action="" method="POST">
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<div>
				Title: <input type="name" name="title" value="{{comment.title}}">
			</div>
			<div id="update_textarea">
				Comment:
			</div>	
				<textarea class="update_textarea" type="text" name="comment" rows="4" cols="60" >{{comment.comment}} </textarea>
			<div id="submit_update">
				<input class="submit_update_btn" type="submit" name="update-btn" value="UPDATE">
			</div>
		</form>
</div>