<title>STAFF</title>
<div id="staff_table">
<h1 class="staff_header">STAFF</h1>
{{> errors errors}}
	{{#if dbErrorOccurred}}
		<p class="admin_top">Can't display the page now, try again later.</p>
	{{/if}}
	{{#if updated}}
		<p>UPDATED</p>
	{{/if}}
	{{#if staff}}
		<p class="staff_capital">Name: {{staff.name}}</p>
		<p class="staff_capital">Position: {{staff.position}}</p>
		<p>Year Of Experince: {{staff.yearOfExperince}} Years</p>
</div>	
	{{#if isLoggedIn}}
		<a href="/staffs/update/{{staff.id}}" class="update_btn">UPDATE</a>
		<form action="/staffs/delete/{{staff.id}}" method="POST">
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<input type="submit" class="delete_btn" value="DELETE" onclick="return confirm('Are You Sure You Want To Delete This Staff?');">
		</form>
	{{/if}}
{{else}}
	<p>No Staff with that ID exists</p>
{{/if}}